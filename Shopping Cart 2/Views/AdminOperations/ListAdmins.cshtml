@model IEnumerable<ApplicationUser> ;

@{
    ViewData["Title"] = "Current Administrators";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Email</th>
                <th>Username</th>
                <th>Date of Join</th>
                <th>User ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model)
            {
                <tr>
                    <td>@admin.Email</td>
                    <td>@admin.UserName</td>
                    <td>@admin.Id</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="PromoteToAdmin" class="btn btn-primary">Promote Another User</a>
        <a asp-action="Dashboard" class="btn btn-outline-secondary ml-2">Back to Dashboard</a>
    </div>
</div>